@model PersonalSiteMVC.Models.ContactViewModel
@{
    ViewBag.Title = "Email Confirmation";
}

<!-- ======= Mobile nav toggle button ======= -->
<button type="button" class="mobile-nav-toggle d-xl-none"><i class="icofont-navigation-menu"></i></button>

<!-- ======= Header ======= -->
<header id="header" class="d-flex flex-column justify-content-center">

    <nav class="nav-menu">
        <ul id="contactNav">
            <li class="active"><a href="@Url.Action("Index","Home")"><i class="bx bx-home"></i> <span>Home</span></a></li>
        </ul>
    </nav><!-- .nav-menu -->

</header><!-- End Header -->


<main id="main">
    <!-- ======= Contact Section ======= -->
    <section id="contact" class="contact">
        <div class="container" data-aos="fade-up">

            <div class="section-title">
                <h2>Contact</h2>
                <h3>Your Message Has Been Sent! Details Below.</h3>
            </div>
            <div class="col-lg-12">
                <ul class="col-md-12" style="text-align: center; list-style: none;">
                    <li>Name: @Model.Name</li>
                    <li>Email: @Model.Email</li>
                    <li>Subject: @Model.Subject</li>
                    <li>Message: @Model.Message</li>
                </ul>
            </div>
            <br />
            <br />
            <div class="col-md-12" style="text-align: center"><h4>Thank You For The Message, I Will Get Back To You Soon</h4></div>
        </div>
    </section><!-- End Contact Section -->


   

